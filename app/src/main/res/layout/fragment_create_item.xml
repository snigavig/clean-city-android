<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ua.in.nogarbage.app.CreateItemActivity$PlaceholderFragment"
    android:gravity="bottom">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Photo"
        android:id="@+id/buttonTakePhoto" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCreateItem"
        android:layout_below="@+id/buttonTakePhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Create" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_above="@+id/buttonTakePhoto"
        android:layout_alignRight="@+id/buttonTakePhoto"
        android:layout_alignEnd="@+id/buttonTakePhoto" />

</RelativeLayout>
